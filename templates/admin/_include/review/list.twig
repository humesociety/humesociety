<div class="reviews">
  {% for review in submission.reviews %}
    <div class="review">
      <div class="heading">
        <h5>{{ review.reviewer }}</h5>
        <p>{{ review.status }}</p>
        {% if review.status == 'pending' or review.status == 'accepted' %}<a href="{{ path('admin_conference_submission_remind', { review: review.id }) }}" class="button create">email reminder</a>{% endif %}
      </div>
      {% if review.submitted %}
        <div class="feedback">
          <p><strong>Grade:</strong> {% if review.grade == null %}-{% else %}{{ review.grade }}{% endif %}</p>
          <h6>Comments</h6>
          <pre>{{ review.comments }}</pre>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>
