{% extends 'admin/content/_layout.twig' %}

{% block title %}Delete Image{% endblock %}

{% block main %}
  <div class="box content">
    <div class="heading">
      <h4>Delete {{ filename }}</h4>
      <div class="heading-right">
        <a href="{{ path('admin_content_image_index') }}" class="button"><i class="fas fa-chevron-left"></i> Back to Image List</a>
      </div>
    </div>
    <p><img src="/uploads/images/{{ filename }}"></p>
    <p>Are you sure you want to delete this image? This action cannot be undone!</p>
    {{ form_start(uploadForm) }}
      {{ form_row(uploadForm._token) }}
      <div class="buttons">
        <button type="submit">Delete</button>
      </div>
    {{ form_end(uploadForm, { render_rest: false }) }}
  </div>
{% endblock %}
