{% extends 'admin/content/_layout.twig' %}

{% block title %}Delete Page{% endblock %}

{% block main %}
  {% embed 'admin/_embed/box.twig' %}
    {% block title %}Delete Page: {{ page }}{% endblock %}
    {% block header_right %}
      <div class="input">
        <a href="{{ path('admin_content_page_index', { section: page.section }) }}" class="button"><i class="fas fa-chevron-left"></i> Back to Page List</a>
      </div>
    {% endblock %}
    {% block body %}
      {% include 'admin/_include/page/delete.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
