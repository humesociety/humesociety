{% extends 'admin/content/_layout.twig' %}

{% block title %}Delete Page{% endblock %}

{% block main %}
  <div class="box content">
    <div class="heading">
      <h5>Delete Page: {{ page }}</h5>
      <div class="heading-right">
        <div class="input">
          <a href="{{ path('admin_content_page_view', { section: page.section }) }}" class="button"><i class="fas fa-chevron-left"></i> Back to Page List</a>
        </div>
      </div>
    </div>
    <p>Are you sure you want to delete this page from the web site? This action cannot be undone!</p>
    {{ form_start(deleteForm) }}
      {{ form_row(deleteForm._token) }}
      <div class="buttons">
        <button type="submit" class="button">Delete</button>
      </div>
    {{ form_end(deleteForm) }}
  </div>
{% endblock %}
