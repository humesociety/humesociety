{% extends 'admin/base.twig' %}

{% block sidebar %}
  <div class="inner-header">
    <a href="{{ path('admin_page_index') }}"{% if subarea == 'page' %} class="is-active"{% endif %}>
      <span class="icon"><i class="far fa-file-alt"></i></span>
      <span class="link-text">Pages</span>
    </a>
    <a href="{{ path('admin_image_index') }}"{% if subarea == 'image' %} class="is-active"{% endif %}>
      <span class="icon"><i class="far fa-image"></i></span>
      <span class="link-text">Images</span>
    </a>
    <a href="{{ path('admin_news-item_index') }}"{% if subarea == 'news-item' %} class="is-active"{% endif %}>
      <span class="icon"><i class="far fa-newspaper"></i></span>
      <span class="link-text">News Items</span>
    </a>
    <a href="{{ path('admin_conference_index') }}"{% if subarea == 'conference' %} class="is-active"{% endif %}>
      <span class="icon"><i class="far fa-calendar-alt"></i></span>
      <span class="link-text">Conferences</span>
    </a>
    <a href="{{ path('admin_report_index') }}"{% if subarea == 'report' %} class="is-active"{% endif %}>
      <span class="icon"><i class="far fa-file-pdf"></i></span>
      <span class="link-text">Reports</span>
    </a>
  </div>
{% endblock %}
