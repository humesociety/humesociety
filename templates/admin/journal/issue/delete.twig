{% extends 'admin/journal/_layout.twig' %}

{% block title %}Delete Journal Issue{% endblock %}

{% block main %}
  {% embed 'admin/_embed/box.twig' %}
    {% block title %}Delete Issue {{ issue }}{% endblock %}
    {% block header_right %}
      <div class="input">
        <a href="{{ path('admin_journal_issue_view', { decade: issue.decade }) }}" class="button"><i class="fas fa-chevron-left"></i> Back to Issues List</a>
      </div>
    {% endblock %}
    {% block body %}
      {% include 'admin/_include/issue/delete.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
