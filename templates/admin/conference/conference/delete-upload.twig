{% extends 'admin/conference/_layout.twig' %}

{% block title %}Delete Conference File{% endblock %}

{% block main %}
  <div class="box content">
    <div class="heading">
      <h5>Delete {{ filename }} associated with conference {{ conference }}</h5>
      <div class="heading-right">
        <div class="input">
          <a href="{{ path('admin_conference_conference_edit', { id: conference.id, tab: 'files' }) }}" class="button"><i class="fas fa-chevron-left"></i> Back to Conference {{ conference.number }}</a>
        </div>
      </div>
    </div>
    <p>Are you sure you want to delete this file? This action cannot be undone!</p>
    {{ form_start(uploadForm) }}
      {{ form_row(uploadForm._token) }}
      <div class="buttons">
        <button type="submit">Delete</button>
      </div>
    {{ form_end(uploadForm, { render_rest: false }) }}
  </div>
{% endblock %}
