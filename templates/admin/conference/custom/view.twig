{% extends 'admin/conference/_layout.twig' %}

{% block title %}Custom Text &amp; Emails{% endblock %}

{% block main %}
  {% embed 'admin/_embed/box.twig' %}
{% block title %}Custom Text &amp; Emails{% endblock %}
    {% block body %}
      <nav class="tabs">
        <a data-tab="text"{% if tab == 'text' %} class="is-active"{% endif %}>Text</a>
        <a data-tab="email"{% if tab == 'email' %} class="is-active"{% endif %}>Emails</a>
      </nav>
      <div class="tab-pane{% if tab == 'text' %} is-active{% endif %}" id="text">
        <p>From here you can edit some of the text that appears to users and reviewers on this site. Text should be marked up as HTML; if you are unfamiliar with HTML, please ask the technical director for help formatting this text appropriately.</p>
        {% for text in texts %}
          <h4><a href="{{ path('admin_conference_custom_text', { label: text.label }) }}">Edit {{ text.title }} Text</a></h4>
          <p>{{ text.description }}</p>
        {% endfor %}
      </div>
      <div class="tab-pane{% if tab == 'email' %} is-active{% endif %}" id="email">
        <p>From here you can edit the templates for emails that are automatically generated and sent out by this system. Email content should be marked up as HTML; if you are unfamiliar with HTML, please ask the technical director for help formatting this text appropriately.</p>
        {% for template in conferenceEmailTemplates %}
          <h4><a href="{{ path('admin_conference_custom_email', { label: template.label }) }}">Edit {{ template.title }} Email</a></h4>
          <p>{{ template.description }}</p>
        {% endfor %}
      </div>
    {% endblock %}
  {% endembed %}
{% endblock %}
