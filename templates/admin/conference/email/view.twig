{% extends 'admin/conference/_layout.twig' %}

{% block title %}Emails{% endblock %}

{% block main %}
  <div class="box content">
    <h5>Emails</h5>
    {% for id, template in conference_email_templates %}
      <h6><a href="{{ path('admin_conference_email_edit', { type: id }) }}">Edit {{ template.title }} Email</a></h6>
      <p>{{ template.description }}</p>
    {% endfor %}
  </div>
{% endblock %}
