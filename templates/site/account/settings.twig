{% extends 'site/account/_layout.twig' %}

{% block title %}Membership Settings{% endblock %}

{% block main %}
  <div class="section content">
    <h1>Membership Settings</h1>
    <p>Use the checkboxes below to specify whether you wish to receive occasional emails from the Hume Society with news we think will be of interest, and whether you wish to receieve a print copy of <i>Hume Studies</i>. In the latter case, please include the mailing address where you would like your copy of the journal to be sent.</p>
    {{ form_start(userSettingsForm) }}
      <div class="columns has-checkboxes">
        <div class="column has-checkbox">
          {{ form_row(userSettingsForm.receiveEmail) }}
        </div>
        <div class="column has-checkbox">
          {{ form_row(userSettingsForm.receiveHumeStudies) }}
        </div>
      </div>
      {{ form_row(userSettingsForm.mailingAddress) }}
      {{ form_row(userSettingsForm._token) }}
      <div class="buttons">
        <button type="submit" class="button is-success">Update Settings</button>
      </div>
    {{ form_end(userSettingsForm) }}
  </div>
{% endblock %}
