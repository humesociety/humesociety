{% extends 'site/templates/_layout.twig' %}

{% block main %}
  {% embed 'site/_embed/heading.twig' %}{% endembed %}
  {% if election is not null %}
    <h2>Election for the Executive Committee {{ election.year }}</h2>
    {% if app.user.hasVoted %}
      <p>Your votes have been submitted.</p>
    {% else %}
      <p>The election is now open for the Executive Committee of the Hume Society with three year terms beginning in {{ election.year }}. Details of each candidate are shown below. You may vote for at most one candidate for President (if any), at most one candidate for Executive Vice-President Treasurer (if any), and at most {{ ordinary }} regular committee members. Votes are completely anonymous; this site records who has voted and how many votes each candidate has received, but not who voted for whom.</p>
      <div style="display: none;" data-ordinary="{{ ordinary }}"></div>
      {{ form_start(votingForm) }}
        {% for name, field in votingForm.children %}
          {% if name != '_token' %}
            <div class="columns has-checkboxes">
              <div class="column has-checkbox">
                {{ form_row(field) }}
              </div>
            </div>
            {% for candidate in candidates %}
              {% if candidate.id == name %}
                {% if candidate.description %}<p>{{ candidate.description|raw }}</p>{% endif %}
              {% endif %}
            {% endfor %}
          {% endif %}
        {% endfor %}
        {{ form_row(votingForm._token) }}
        <div class="buttons">
          <button type="submit">Submit Votes</button>
        </div>
      {{ form_end(votingForm) }}
    {% endif %}
  {%  else %}
    <p>There are no elections at present.</p>
  {% endif %}
{% endblock %}
